<h1>Task Edit</h1>

<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.check_box :completed %>
  <%= f.label :completed, "Task Done" %>
  <%= f.submit %>
<% end %>

<%= link_to "Back", root_path %>
