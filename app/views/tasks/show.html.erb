<h1>Task Show</h1>

<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p>Task is completed ? <%= @task.completed %></p>

<%= link_to "Edit this task", edit_task_path %>
<%= link_to "Back", root_path %>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
